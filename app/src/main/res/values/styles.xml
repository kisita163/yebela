<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yebela_primary_color</item>
        <item name="colorPrimaryDark">@color/yebela_primary_dark</item>
        <item name="colorAccent">@color/yebela_primary_light</item>
    </style>

    <!-- splash theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.Yebela.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/yebela_1</item>
    </style>

    <!-- Main activity theme. -->
    <style name="MainTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Yebela.NoTitle</item>
    </style>

    <!-- Tool bar style -->
    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/yebela_primary_color</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
